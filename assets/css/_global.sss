div.branding
  display: block
  text-align: center
  @media (min-width: 1200px )
    display: block
    text-align: left

  & img
    display   : inline-block
    width     : 100px

  & div.container
    display           : inline-block
    vertical-align    : top
    margin-left       : 0em

    & .title, & h1
      font-family             : 'shannonbook'
      display                 : block
      font-weight             : normal
      -webkit-margin-after    : 0em
      -webkit-margin-before   : 0em
      margin-top              : 0px
      margin-bottom           : 0px
      font-size               : 3.2em
      line-height             : 1em
      color                   : #939598
      @media (min-width: 430px )
        font-size             : 3.6em

    & .tagline
      margin-left             : .5em
      font-style              : italic
      font-weight             : 600
      line-height             : 1em


img.headerBanner
  width: 100%

ul

  &.subheader
    margin-bottom: 0em

    & li
      font-size: .85em
      @media (min-width: 460px )
        font-size: 1.1em

  &.contact
    font-size: .8em
    margin-top: var(--gutterBottomMobile)
    @media (min-width: 800px )
      font-size: .9em
      margin-top: var(--gutterBottom)

    & li
      font-size: .9em

  &.horizontalBullet
    text-align        : center
    background-color  : #f4f2ea
    padding           : .5em 0

    & li
      display : inline-block

    & li:before
      content : '\00a0\2022\00a0\00a0'

    & li:first-child:before
      content : ''
