button(id="mobile-menu-button" class="btnMenu")
  span(class="bar")
  span(class="text") Menu

nav
  ul
    if(condition="pageId != 'index'")
      li
        a(href="/index") Home
    each(loop="item of navigation.data")
      li
        a(class="{{ pageId === item.slug  ? 'selected' : '' }}" href="/{{ item.slug }}") {{ item.name }}
